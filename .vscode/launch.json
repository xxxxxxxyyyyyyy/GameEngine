        {
            "name": "(Windows) Launch Tools",
            "type": "cppvsdbg",
            "request": "launch",
            "program": "${workspaceFolder}/bin/tools.exe",
            "args": [
                "combine",
                "outfile=${workspaceFolder}/assets/textures/wavy-sand_combined.png",
                "metallic=${workspaceFolder}/assets/textures/wavy-sand_metallic.png",
                "roughness=${workspaceFolder}/assets/textures/wavy-sand_roughness.png", 
                "ao=${workspaceFolder}/assets/textures/wavy-sand_ao.png"
            ],
            "stopAtEntry": false,
            "cwd": "${workspaceFolder}/bin/",
            "environment": [],
            "console":"integratedTerminal",
        },
        {
            "name": "(Linux) Launch Tools",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}/bin/tools",
            "args": [
                "buildshaders",
                "${workspaceFolder}/assets/shaders/Builtin.MaterialShader.vert.glsl",
                "${workspaceFolder}/assets/shaders/Builtin.MaterialShader.frag.glsl",
                "${workspaceFolder}/assets/shaders/Builtin.UIShader.vert.glsl",
                "${workspaceFolder}/assets/shaders/Builtin.UIShader.frag.glsl",
